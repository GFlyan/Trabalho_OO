package entities;

import java.util.Scanner;

import javax.swing.JOptionPane;

public class test {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int userOption;
		JOptionPane.showMessageDialog(null, "Olá");
		do {
			System.out.println("------------CLINICA MÉDICA------------");
			System.out.println("--------------------------------------");
			System.out.println("1 - PORTAL DO PACIENTE\n2 - PORTAL DO MEDICO\n0 - SAIR");
			System.out.println("--------------------------------------");
			System.out.println("INSIRA: ");
			userOption = scan.nextInt();
			System.out.println("--------------------------------------");
			switch (userOption) {
			case 1: {
				
				break;
			}
			case 2: {
				
				break;
			}
			default:
				if(userOption != 0) {
					System.out.println("--------------------------------------");
					System.out.println("--------------------------------------");
				}
			}
		} while(userOption != 0);
	}
}
